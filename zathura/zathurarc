# Arquivo de configuração do Zathura
# Tema escuro inspirado no Gruvbox

# fit-width
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 100

# Configurações gerais
set guioptions ""

# Cores do tema Gruvbox escuro
set recolor true  # Ativa o recoloring (tema escuro)
set recolor-lightcolor "#282828"  # Cor de fundo (background)
set recolor-darkcolor "#ebdbb2"   # Cor do texto (foreground)

# Cores para realces e seleções
set recolor-keephue true  # Mantém as cores originais para imagens
set default-bg "#282828"  # Cor de fundo padrão
set default-fg "#ebdbb2"  # Cor do texto padrão
set inputbar-bg "#3c3836" # Cor de fundo da barra de entrada
set inputbar-fg "#ebdbb2" # Cor do texto da barra de entrada
set statusbar-bg "#3c3836" # Cor de fundo da barra de status
set statusbar-fg "#ebdbb2" # Cor do texto da barra de status
set notification-bg "#3c3836" # Cor de fundo das notificações
set notification-fg "#ebdbb2" # Cor do texto das notificações
set completion-bg "#3c3836"   # Cor de fundo do autocompletar
set completion-fg "#ebdbb2"   # Cor do texto do autocompletar
set completion-highlight-bg "#458588" # Cor de fundo do item selecionado no autocompletar
set completion-highlight-fg "#ebdbb2" # Cor do texto do item selecionado no autocompletar
set index-bg "#282828"        # Cor de fundo do índice
set index-fg "#ebdbb2"        # Cor do texto do índice
set index-active-bg "#458588" # Cor de fundo do item ativo no índice
set index-active-fg "#ebdbb2" # Cor do texto do item ativo no índice

# Atalhos personalizados
map i recolor  # Alterna entre o tema escuro e o original (aperte 'i')
